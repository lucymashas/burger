
    $("#orderburger")on("submit",function(event){
       event.preventDefault();
       var hamburgerName = {
          name: $('#burgerName').val().trim(),
          devouredit: "true";
      };
      $.ajax("/burgers",{
        type:"POST"
        data:hamburgerName
      }).then(
        function(){
          console.log("created New burger:);
          location.reload();
        }
      )
    });
        